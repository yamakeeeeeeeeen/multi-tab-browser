{
  "name": "multi-tab-browser",
  "version": "1.0.0",
  "license": "MIT",
  "main": "main/index.js",
  "productName": "multi tab browser",
  "scripts": {
    "build": "yarn build-renderer && yarn build-electron",
    "build-electron": "tsc -p electron-src",
    "build-renderer": "next build renderer && next export renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "yarn build-electron && electron .",
    "dist": "yarn build && electron-builder",
    "pack-app": "yarn build && electron-builder --dir",
    "type-check": "tsc --project renderer/tsconfig.json",
    "eslint": "eslint ./renderer --ext .tsx --ext .ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.0.4",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "framer-motion": "^3.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hook-form": "^6.13.1"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "next": "latest",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ]
  }
}
